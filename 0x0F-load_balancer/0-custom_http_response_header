#!/usr/bin/env bash
# Configuring a custom HTTP response header for web-01

sudo apt-get update
sudo apt-get install -y nginx

echo "Hello World!" | sudo tee /var/www/html/index.html

# Perform a redirection
replacement_string="server_name _;\n\trewrite ^\/redirect_me https:\/\/github.com\/lewisthagichu permanent;"

sudo sed -i "s/server_name _;/$replacement_string/" /etc/nginx/sites-enables/default

# Create a custom error page
echo "Ceci n'est pas une page" | sudo tee /var/www/html/404.html

replacement_string="listen 80 default_server;\n\terror_page 404 \/404.html;\n\tlocation = \/404.html {\n\t\troot \/var\/www\/html;\n\t\tinternal;\n\t}"

sudo sed -i "s/listen 80 default_server;/$replacement_string/" /etc/nginx/sites-enabled/default

# Custom HTTP response header
sudo sed -i "server_name _;/a add_header X-Served-By $HOSTNAME;" /etc/nginx/sites-enabled/default

# Test for syntax errors
sudo nginx -t

# Restart server
sudo service nginx restart
